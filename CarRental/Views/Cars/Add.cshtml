
@model AddCarrFormModel
@{
    ViewData["Title"] = "Add car";
}

<div class="container">
    <div class="row">
        <div class="offset-2 col-6 col-sm-8">
            <h2 class="heading-margin">Add car</h2>
            <form method="post">
                  <div class="form-group">
                      <label asp-for="Brand"></label>
                      <input asp-for="Brand" class="form-control"  placeholder="input the brand...">
                  </div>
                  <div class="form-group">
                      <label asp-for="Model"></label>
                      <input asp-for="Model" class="form-control"  placeholder="input the model...">
                  </div>
                  <div class="form-group">
                      <label asp-for="Description"></label>
                      <textarea asp-for="Description" rows="3" class="form-control" placeholder="description here..."></textarea>
                  </div>
                  <div class="form-group">
                      <label asp-for="ImageUrl">Image Url</label>
                      <input asp-for="ImageUrl" class="form-control" placeholder="input the image url...">
                  </div>
                  <div class="form-group">
                      <label asp-for="Year"></label>
                      <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                  </div>
             
                  <div class="form-group">
                      <label asp-for="CategoryId"></label>
                      <select asp-for="CategoryId" class="form-control">
                        @foreach(var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                      </select>
                  </div>
                  
                  <input class="btn btn-primary" type="submit" value="Save" />
    
             </form>
        </div>

    </div>

</div>
