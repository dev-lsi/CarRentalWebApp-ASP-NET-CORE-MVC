@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

@{
    var cars = Model.Cars;
    var firstCar = cars.Any() ? cars[0] : null;
    var secondCar = cars.Count > 1 ? cars[1] : null;
    var thirdCar = cars.Count > 2 ? cars[2] : null;
}

@if (!cars.Any())
{
    <div asp->
        <h1 class="display-4">Welcome to the best renting car system</h1>
        <p class="lead">There are no cars in the system currently. So why dont you just add one</p>
        <hr class="my-4">
        <p>yuo can add car with all data needed</p>
        <a class="btn btn-primary btn-lg"
       asp-controller="Cars"
       asp-action="Add">you can add car here</a>
    </div>
}

<div class=" ">
    <div class="col-md-10 offset-1">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">

                @if (firstCar != null)
                {
                    <div class="carousel-item active">
                        
                             <img src="@firstCar.ImgUrl"
                         class="d-block w-100 h-25"
                         alt="@firstCar.Brand @firstCar.Model @firstCar.Year">
                       
                        <div class=" carousel-caption d-none d-md-block">
                            <h5><a class="btn-primary" asp-controller="Cars" asp-action="Details" asp-route-Id="@firstCar.Id">"@secondCar.Brand @secondCar.Model @secondCar.Year"</a>..</h5>
                        </div>
                    </div>
                }

                @if (secondCar != null)
                {
                    <div class="carousel-item">
                        <div class="col-8">
                             <img src="@secondCar.ImgUrl"
                              class="d-block w-100 h-25"
                              alt="@secondCar.Brand @secondCar.Model @secondCar.Year">
                         </div>
                        <div class=" carousel-caption d-none d-md-block">
                            <h5><a class="btn-primary" asp-controller="Cars" asp-action="Details" asp-route-Id="@secondCar.Id">"@secondCar.Brand @secondCar.Model @secondCar.Year"</a>..</h5>

                        </div>

                    </div>
                }

                @if (thirdCar != null)
                {
                    <div class="carousel-item">
                        <div class="col-8">
                             <img src="@thirdCar.ImgUrl"
                             class="d-block w-100 h-25 "
                             alt="@thirdCar.Brand @thirdCar.Model @thirdCar.Year">
                        </div>
                        <div class=" carousel-caption d-none d-md-block">

                            <h5><a class="btn-primary" asp-controller="Cars" asp-action="Details" asp-route-Id="@thirdCar.Id">"@secondCar.Brand @secondCar.Model @secondCar.Year"</a></h5>

                        </div>

                    </div>
                }


            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="jumbotron">
            <div class="row">
                <h2 class="col-md-4 text-center">
                    @Model.TotalCars Cars
                </h2>
                <h2 class="col-md-4 text-center">
                    @Model.TotalUsers Users
                </h2>
                <h2 class="col-md-4 text-center">
                    @Model.TotalRents Rents
                </h2>

            </div>
        </div>
    </div>
</div>


